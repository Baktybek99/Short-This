@model Innovative_Hospital_BLL.ViewModels.DoctorInstructions.CreateInstructionVM

<h4>Направление доктора</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input asp-for="PatientId" type="hidden" value=@Model.PatientId />
                <input asp-for="DoctorId" type="hidden" value=@Model.DoctorId />
                <input asp-for="AccountingId" type="hidden" value=@Model.AccountingId />
            </div>           
            <div class="form-group">
                <label asp-for="Analyzes" class="control-label"></label>
                <input asp-for="Analyzes" class="form-control" />
                <span asp-validation-for="Analyzes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment" class="control-label"></label>
                <input asp-for="Treatment" class="form-control" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetInstructions" asp-controller="DoctorInstuction" asp-route-accountingId=@Model.AccountingId>Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
