@model IEnumerable<Innovative_Hospital_BLL.ViewModels.AdminViewModels.EmployeeInfoVM>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src=@item.ImagePath style="width:50px; height:50px " class="rounded-circle" /></td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFired)
                </td>
                <td>
                    <div>

                    </div>
                    @Html.ActionLink("Подробнее", "", new { }) |
                    @Html.ActionLink("Изменить", "Edit", new { }) |
                    @Html.ActionLink("Уволить", "FireEmployee", new{ })
                </td>
            </tr>
        }
    </tbody>
</table>


}